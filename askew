#!/usr/bin/env ruby

require 'todo-txt'
require 'pry'

#binding.pry

begin
  puts "No definition found for ASKEW_TODO_LOCATION" if !ENV["ASKEW_TODO_LOCATION"]
  list = Todo::List.new ENV["ASKEW_TODO_LOCATION"]
  puts list.by_priority "A"
rescue
  puts "Unable to load your todo list."
end
